#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH << File.expand_path('../models', __dir__)

require 'bundler'
Bundler.require(:development, :default)

require 'language_model'
require 'debug'

sequence_length = ARGV[1].nil? ? 10 : ARGV[1].to_i
puts LanguageModel.new.generate(sequence_length: sequence_length)
